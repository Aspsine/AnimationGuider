<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivTitleFour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/guider_four_title" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ivChart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/guider_four_chart"/>
        <ImageView
            android:id="@+id/ivData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/guider_four_num"
            android:layout_marginTop="@dimen/data_marginTop"
            android:layout_marginLeft="@dimen/data_marginLeft"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ivArrowUpFour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/guider_arrow_up"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="40dp"/>
    </LinearLayout>
</LinearLayout>